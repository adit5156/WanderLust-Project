<% layout("/layouts/boilerplate") -%>
<h3>All Listings</h3>
<div class="row">
  <% for(let listing of allListings) { %>
  <div class="card listing-card col-lg-3 col-md-4 col-sm-6">
    <a href="/listings/<%= listing._id %>" class="card-link">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listing-image"
      />
      <div class="card-body">
        <p class="card-text">
          <strong><%= listing.title %></strong>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
        </p>
      </div>
    </a>
  </div>
  <% } %>
</div>
